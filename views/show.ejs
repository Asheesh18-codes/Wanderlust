<% layout("/layouts/boilerplate.ejs") %>

<style>
  html, body {
    height: 100vh;
  }
</style>

<body class="bg-light h-100">
  <div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card  w-100 listing-card" style="max-width: 900px;">
      <div class="row g-0">
        <!-- Left: Image -->
        <div class="col-md-5">
          <img src="<%= listing.image.url %>" class="img-fluid rounded-start h-100 object-fit-cover" alt="<%= listing.title %>">
        </div>

        <!-- Right: Title, Price, Description -->
        <div class="col-md-7">
          <div class="card-body p-4">
            <h3 class="card-title"><%= listing.title %></h3>
            <p class="text-muted">Posted by: <i class="fa-solid fa-user"></i> <%= listing.owner.username %></p>
            <h5 class="text-success mb-3">₹<%= new Intl.NumberFormat("en-IN").format(listing.price) %></h5>
            <p class="card-text"><%= listing.description %></p>
          </div>
        </div>
      </div>

      <!-- Bottom: Location, Country, Buttons -->
      <div class="card-footer bg-white p-4">
        <ul class="list-group list-group-flush mb-3">
          <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
          <li class="list-group-item"><strong>Country:</strong> <%= listing.country %></li>
        </ul>

        <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>
          <div class="d-flex justify-content-between">
            <a href="/listings/<%= listing.id %>/edit" class="btn btn-outline-primary">Edit Listing</a>
            <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
              <button class="btn btn-outline-danger">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
      <div class="card-footer bg-white p-4">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <label for="range" class="form-label">Range</label>
            <input id = "range" name = "review[rating]" min = '1' max = '5' type="range" class="form-range">
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name = "review[comment]" id = "comment" col = '30' rows = '5' class="form-control" required></textarea>
            <div class="invalid-feedback">Write some review</div>
          </div>
          <button class="btn btn-outline-dark">Submit Review</button>
        </form>
        <hr>
          <h3 class="mb-4"><b>Reviews</b></h3>

          <div class="mb-4">
            <% if (listing.review.length === 0) { %>
              <p class="text-muted fst-italic">No reviews yet.</p>
            <% } %>
          </div>

          <div class="row row-cols-1 row-cols-md-2 g-4">
            <% for (let review of listing.review) { %>
              <div class="col">
                <div class="card h-100 shadow-sm border-0">
                  <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-user"></i> <%= review.author.username %></h5>
                    <p class45="card-text"><%= review.comment %></p>
                    <p class="card-text text-warning"><strong>Rating:</strong> <%= review.rating %> ⭐</p>
                  </div>
                  <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-end">
                      <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-outline-danger btn-sm">Delete Review</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            <% } %>
          </div>

      </div>
    </div>
  </div>
</body>