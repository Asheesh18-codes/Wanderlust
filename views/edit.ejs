<% layout("/layouts/boilerplate.ejs") %>

<style>
  html, body {
    height: 100%;
  }
</style>

<body class="bg-light h-100">
  <div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
      <div class="col-md-8 offset-md-2">
        <h3 class="mb-4 text-center">Edit Your Place</h3>
        <form method="POST" action="/listings/<%= listing.id %>?_method=PUT" novalidate class="needs-validation">

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" name="listing[title]" value="<%= listing.title %>" class="form-control" required />
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="listing[description]" class="form-control" rows="5" required><%= listing.description %></textarea>
          </div>

          <!-- Image Preview (not editable here, for display only) -->
          <div class="mb-3">
            <label class="form-label">Current Image</label>
            <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded border" style="max-height: 300px;" />
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" name="listing[location]" value="<%= listing.location %>" class="form-control" required />
          </div>

          <!-- Country and Price -->
          <div class="row">
            <div class="col-md-8 mb-3">
              <label for="country" class="form-label">Country</label>
              <input id="country" name="listing[country]" value="<%= listing.country %>" class="form-control" required />
            </div>
            <div class="col-md-4 mb-3">
              <label for="price" class="form-label">Price</label>
              <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" min="0" class="form-control" required />
            </div>
          </div>

          <!-- Submit -->
          <button type="submit" class="btn btn-dark w-100">Update</button>
        </form>
      </div>
    </div>
  </div>
</body>
