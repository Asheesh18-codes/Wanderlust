<% layout("/layouts/boilerplate.ejs") %>

<style>
  html, body {
    height: 100%;
  }
</style>

<body class="bg-light h-100">
  <div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
      <div class="col-md-8 offset-md-2">
        <h3 class="mb-4 text-center">Add Your Place</h3>
        <form method="POST" action="/listings">
          
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" name="title" placeholder="Enter title" type="text" required class="form-control" />
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" placeholder="Enter description" required 
              class="form-control" rows="5"></textarea>
          </div>

          <!-- Image URL -->
          <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input id="image" name="image" placeholder="Enter image URL/link" type="text" required class="form-control" />
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" name="location" placeholder="Enter location" type="text" required class="form-control" />
          </div>

          <!-- Price and Country -->
          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="price" class="form-label">Price</label>
              <input id="price" name="price" placeholder="Enter price" type="number" min="0" required class="form-control" />
            </div>
            <div class="col-md-8 mb-3">
              <label for="country" class="form-label">Country</label>
              <input id="country" name="country" placeholder="Enter country" type="text" required class="form-control" />
            </div>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-dark w-100">Add</button>
        </form>
      </div>
    </div>
  </div>
</body>
